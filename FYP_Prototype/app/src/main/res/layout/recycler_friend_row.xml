<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CBCBCB"
    android:id="@+id/friend_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/friend_row_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/friend_profile_image_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorAccent"
            android:elevation="12dp"
            app:cardCornerRadius="55dp">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/friend_profile_image"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/friend_profile_image_card"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oisin Redmond"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/friend_email"
                android:layout_below="@+id/friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oisinredmond@gmail.com"
                android:textSize="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>