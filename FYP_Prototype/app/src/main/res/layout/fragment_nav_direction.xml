<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="5dp"
    android:backgroundTint="@color/colorPrimary"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container1"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/direction_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_arrow_up"
                />

            <TextView
                android:id="@+id/directions_text"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/direction_icon"
                />
        </RelativeLayout>

        <View
            android:layout_below="@+id/container1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#c0c0c0"/>

        <RelativeLayout
            android:layout_below="@+id/container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/dist_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_distance"
                android:rotation="90"/>

            <TextView
                android:id="@+id/distance_text"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dist_icon"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/duration_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/distance_text"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/duration_text"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/duration_icon"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>